<UserControl x:Class="CaseDatabase.Cases"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CaseDatabase"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <UserControl.Resources>
        <Style TargetType="{x:Type Label}">
            <Setter Property="Label.Foreground" Value="White"></Setter>
        </Style>
    </UserControl.Resources>

    <Border 
        Margin="10"
        Background="#77000000">
        <DockPanel>
            <Button DockPanel.Dock="Top" x:Name="back" Content="&lt; Back" HorizontalAlignment="Left" Margin="10" VerticalAlignment="Top" Click="back_Click"/>
            <Border DockPanel.Dock="Left" BorderThickness="1" BorderBrush="#ddd">

                <ListBox SelectedIndex="0" Width="auto" Name="ProjectsCombo" Height="auto" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="10,10,0,0" />
            </Border>
            <Border BorderThickness="1" BorderBrush="#ddd">
                <Label HorizontalAlignment="Center" VerticalAlignment="Center">[Case info here]</Label>
            </Border>
        </DockPanel>
    </Border>

</UserControl>
